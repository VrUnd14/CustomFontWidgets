<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Font-TextView :"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <View
                android:layout_width="130dp"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="25dp">

                <awesome.vrund.customfontwidgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello,"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    app:customFont="VeganStyle.ttf" />

                <awesome.vrund.customfontwidgets.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="World"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    app:customFont="Chilanka-Regular.ttf" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Font-EditText :"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <View
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="25dp">

                <awesome.vrund.customfontwidgets.FontEditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hello"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    app:customFont="VeganStyle.ttf" />

                <awesome.vrund.customfontwidgets.FontEditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:hint="World"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    app:customFont="Chilanka-Regular.ttf" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Font-CheckBox :"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <View
                android:layout_width="135dp"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="25dp">

                <awesome.vrund.customfontwidgets.FontCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Hello"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    app:customFont="VeganStyle.ttf" />

                <awesome.vrund.customfontwidgets.FontCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="World"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    app:customFont="Chilanka-Regular.ttf" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Font-RadioButton :"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <View
                android:layout_width="155dp"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="25dp">

                <awesome.vrund.customfontwidgets.FontRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    app:customFont="VeganStyle.ttf" />

                <awesome.vrund.customfontwidgets.FontRadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:checked="true"
                    android:text="World"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    app:customFont="Chilanka-Regular.ttf" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Font-Button :"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <View
                android:layout_width="105dp"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="25dp">

                <awesome.vrund.customfontwidgets.FontButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:text="Hello"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    app:customFont="VeganStyle.ttf" />

                <awesome.vrund.customfontwidgets.FontButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:checked="true"
                    android:text="World"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    app:customFont="Chilanka-Regular.ttf" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>